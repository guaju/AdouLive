<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/porche"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_marginTop="20dp">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="126.6dp"
        android:background="@mipmap/porche" />

    <ImageView
        android:id="@+id/porche_back"
        android:layout_width="21dp"
        android:layout_height="42.2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/anim_gift_full_back" />

    <ImageView
        android:id="@+id/porche_front"
        android:layout_width="42.2dp"
        android:layout_height="55.8dp"
        android:layout_marginLeft="128dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/anim_gift_full_front" />
</FrameLayout>

