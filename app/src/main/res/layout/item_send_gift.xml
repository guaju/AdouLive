<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fl"
    android:layout_width="300dp"
    android:layout_height="wrap_content">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rl_gift_normal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|left"
        android:background="@drawable/shape_gift_bg">

        <ImageView
            android:id="@+id/iv_sender"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_sender_id"
            android:layout_width="78dp"
            android:layout_height="25dp"
            android:layout_alignTop="@+id/iv_sender"
            android:layout_margin="5dp"
            android:layout_toRightOf="@id/iv_sender"
            android:maxLines="1"
            android:text="adouId:"
            android:textColor="@color/green"
            android:textSize="20sp" />

        <TextView
            android:layout_margin="5dp"
            android:id="@+id/tv_gift_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_sender_id"
            android:layout_toRightOf="@id/iv_sender"
            android:text="送出了礼物"
            android:textColor="@color/gray"
            android:textSize="14sp" />


    </RelativeLayout>


    <ImageView
        android:id="@+id/iv_gift_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="120dp"
        android:background="@mipmap/xuegao" />

    <TextView
        android:id="@+id/tv_gift_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="90dp"
        android:text="x 20"
        android:textColor="@color/orange"
        android:textSize="40sp" />
</FrameLayout>